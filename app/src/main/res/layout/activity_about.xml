<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/relativeLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <RelativeLayout
            android:id="@+id/name"
            android:layout_width="130dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="Name        :"/>
            <TextView
                android:id="@+id/appVer"
                android:layout_below="@+id/appName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="Version     :"/>
            <TextView
                android:id="@+id/appDev"
                android:layout_below="@+id/appVer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="Developer :"/>
            <TextView
                android:id="@+id/appCont"
                android:layout_below="@+id/appDev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="Contact    :"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginStart="140dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/appNameVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="16dp"
                android:textColor="@color/primaryColor"
                android:text="iHome"/>
            <TextView
                android:id="@+id/appVerVal"
                android:layout_below="@+id/appNameVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="1.0.0"/>
            <TextView
                android:id="@+id/appDevVal"
                android:layout_below="@+id/appVerVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"
                android:text="Ko Nay Lin Aung"/>
            <TextView
                android:id="@+id/appContVal"
                android:layout_below="@+id/appDevVal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="14dp"
                android:textColor="@color/primaryColor"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>